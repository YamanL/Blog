{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="w-4/5 m-auto text-center">
        <div class="py-12 border-b border-gray-200">
            <h1 class="text-6xl pt-12 pb-8">
                Register
            </h1>

            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword) }}
            
                {{ form_row(registrationForm.agreeTerms) }}
            
            <button 
                type="submit" 
                class="uppercase mt-15 bg-gray-700 text-gray-100 text-lg w-1/5 mt-10 font-extrabold py-4 px-8 rounded-xl hover:bg-gray-600">
                Register
            </button>
            
            {{ form_end(registrationForm) }}

            <p class="text-gray-600 mt-5">Already registered! <a class="bg-gray-700 text-gray-100 p-1 rounded hover:bg-gray-600" href="/login">login</a> now</p>
        </div>
    </div>
{% endblock %}